<section id="team" class="bg-light-gray">
		<div class="container">
				<% batch_num = 1 %>
				<% what_batch = @batches.find_by_batch_number(batch_num) %>
				<div class="row">
						<div class="col-lg-12 text-center">
								<h2 class="section-heading"><%= "#{what_batch.course_type}" %> - Batch <%= "#{what_batch.batch_number}" %></h2>
								<h3 class="section-subheading text-muted"><%= "#{what_batch.batch_message}" %></h3>
						</div>
				</div>
				<div class="row">
						<!-- Instructor -->
						<% @users.where(:batch_number => 1, :role => 'instructor').each do |user| %>
							<div class="col-sm-6 col-md-4 col-lg-2">
									<div class="team-member">
											<% profile_pic = user.picture %>
											<%= image_tag("team/#{profile_pic}" ,class: "img-responsive img-circle instructor",
												alt: "", style:"border: 7px solid #FFAE00;") %>

											<h4><%= user.name %></h4>
											<p class="text-muted"><%= user.jobs %></p>
											<ul class="list-inline social-buttons">
													<li><a target="_blank" href="<%= user.facebook %>"><i class="fa fa-facebook"></i></a>
													</li>
													<li><a target="_blank" href="<%= user.github %>"><i class="fa fa-github"></i></a>
													</li>
													<li><a target="_blank" href="<%= user.website %>"><i class="fa fa-globe"></i></a>
													</li>
											</ul>
									</div>
							</div>
						<% end %>
						<!-- Students -->
						<% @users.where(:batch_number => 1, :role => 'student').each do |user| %>
							<div class="col-sm-6 col-md-4 col-lg-2">
									<div class="team-member">
											<% profile_pic = user.picture %>
											<%= image_tag("team/#{profile_pic}" ,class: "img-responsive img-circle ",  alt: "") %>

											<h4><%= user.name %></h4>
											<p class="text-muted"><%= user.jobs %></p>
											<ul class="list-inline social-buttons">
													<li><a target="_blank" href="<%= user.facebook %>"><i class="fa fa-facebook"></i></a>
													</li>
													<li><a target="_blank" href="<%= user.github %>"><i class="fa fa-github"></i></a>
													</li>
													<li><a target="_blank" href="<%= user.website %>"><i class="fa fa-globe"></i></a>
													</li>
											</ul>
									</div>
							</div>
						<% end %>
				</div>
				<div class="row">
						<div class="col-lg-8 col-lg-offset-2 text-center">
								<p class="large text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aut eaque, laboriosam veritatis, quos non quis ad perspiciatis, totam corporis ea, alias ut unde.</p>
						</div>
				</div>
		</div>
</section>
